<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="19sp"
        android:textColor="#ff000000"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffd58e1f"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/ic_stop"/>
    <com.pascalwelsch.holocircularprogressbar.HoloCircularProgressBar
        android:id="@+id/progress"
        style="CircularProgressBarBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/button"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:stroke_width="2dp"
        app:progress="0.0"
        app:progress_color="#ffe7bd87"
        app:progress_background_color="#ffdddddd"
        app:marker_visible="false"
        app:thumb_visible="false"
        />


</RelativeLayout>